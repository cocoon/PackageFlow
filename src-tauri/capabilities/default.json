{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "DevDash default capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "shell:allow-spawn",
    "shell:allow-kill",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "npm", "cmd": "npm", "args": true },
        { "name": "yarn", "cmd": "yarn", "args": true },
        { "name": "pnpm", "cmd": "pnpm", "args": true },
        { "name": "bun", "cmd": "bun", "args": true },
        { "name": "git", "cmd": "git", "args": true },
        { "name": "node", "cmd": "node", "args": true },
        { "name": "npx", "cmd": "npx", "args": true },
        { "name": "tsx", "cmd": "tsx", "args": true },
        { "name": "cargo", "cmd": "cargo", "args": true },
        { "name": "rustc", "cmd": "rustc", "args": true },
        { "name": "rustup", "cmd": "rustup", "args": true },
        { "name": "python", "cmd": "python", "args": true },
        { "name": "python3", "cmd": "python3", "args": true },
        { "name": "pip", "cmd": "pip", "args": true },
        { "name": "pip3", "cmd": "pip3", "args": true },
        { "name": "go", "cmd": "go", "args": true },
        { "name": "expo", "cmd": "expo", "args": true },
        { "name": "eas", "cmd": "eas", "args": true },
        { "name": "flutter", "cmd": "flutter", "args": true },
        { "name": "dart", "cmd": "dart", "args": true },
        { "name": "pod", "cmd": "pod", "args": true },
        { "name": "xcodebuild", "cmd": "xcodebuild", "args": true },
        { "name": "fastlane", "cmd": "fastlane", "args": true },
        { "name": "xcrun", "cmd": "xcrun", "args": true },
        { "name": "docker", "cmd": "docker", "args": true },
        { "name": "docker-compose", "cmd": "docker-compose", "args": true },
        { "name": "make", "cmd": "make", "args": true },
        { "name": "cmake", "cmd": "cmake", "args": true },
        { "name": "brew", "cmd": "brew", "args": true },
        { "name": "pkill", "cmd": "pkill", "args": true },
        { "name": "killall", "cmd": "killall", "args": true },
        { "name": "ls", "cmd": "ls", "args": true },
        { "name": "cat", "cmd": "cat", "args": true },
        { "name": "head", "cmd": "head", "args": true },
        { "name": "tail", "cmd": "tail", "args": true },
        { "name": "find", "cmd": "find", "args": true },
        { "name": "grep", "cmd": "grep", "args": true },
        { "name": "mkdir", "cmd": "mkdir", "args": true },
        { "name": "rm", "cmd": "rm", "args": true },
        { "name": "cp", "cmd": "cp", "args": true },
        { "name": "mv", "cmd": "mv", "args": true },
        { "name": "touch", "cmd": "touch", "args": true },
        { "name": "chmod", "cmd": "chmod", "args": true },
        { "name": "echo", "cmd": "echo", "args": true },
        { "name": "pwd", "cmd": "pwd", "args": true },
        { "name": "which", "cmd": "which", "args": true },
        { "name": "env", "cmd": "env", "args": true },
        { "name": "curl", "cmd": "curl", "args": true },
        { "name": "wget", "cmd": "wget", "args": true },
        { "name": "tar", "cmd": "tar", "args": true },
        { "name": "unzip", "cmd": "unzip", "args": true },
        { "name": "open", "cmd": "open", "args": true }
      ]
    },
    "dialog:default",
    "store:default",
    "pty:default",
    "notification:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" }
      ]
    }
  ]
}
